<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Tuto10DaysXamarin.MainPage">

    <StackLayout Margin="16,20">
        <Entry x:Name="entradaTitulo"
               TextChanged="entradaTitulo_TextoCambiado"
               Placeholder="Titulo de la entrada."
               Style="{StaticResource estiloEntradaPrincipal}"/>
        <Editor x:Name="editorCuerpo"
                TextChanged="contenidoEditor_TextoCambiado"
                VerticalOptions="FillAndExpand"
                Placeholder="Escribe lo que quieras..."
                Style="{StaticResource estiloEntradaPrincipal}"/>
        <Button x:Name="botonGuardar"
                Clicked="botonGuardar_Click"
                Text="Guardar"
                IsEnabled="False"
                Style="{StaticResource estiloBotonPrincipal}"/>
        <Button x:Name="botonCancelar"
                Clicked="botonCancelar_Click"
                Text="Cancelar"
                Style="{StaticResource estiloBotonCancelar}"/>
    </StackLayout>

</ContentPage>
